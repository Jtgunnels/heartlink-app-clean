{
  "functions": {
    "source": "backend/functions",
    "runtime": "nodejs22"
  },
  "firestore": {
    "rules": "backend/firestore.rules",
    "indexes": "backend/firestore.indexes.json",
    "data": "backend/firestore_schema_heartlink_v4_1.json",
    "persistence": "data/firestore"
  },
  "hosting": {
    "public": "provider-platform/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "host": "127.0.0.1",
      "port": 8081
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true,
      "host": "127.0.0.1",
      "port": 4001
    },
    "hub": {
      "port": 4401
    },
    "logging": {
      "port": 4501
    }
  }
}
