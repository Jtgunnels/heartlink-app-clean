{
  "functions": {
    "source": "backend/functions",
    "runtime": "nodejs22"
  },
  "firestore": {
    "rules": "backend/firestore.rules",
    "indexes": "backend/firestore.indexes.json",
    "data": "backend/firestore_schema_heartlink_v4_1.json",
    "persistence": "data/firestore"
  },
  "hosting": {
    "public": "provider-platform/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "**", "destination": "/index.html" }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|html|png|jpg|jpeg|svg|webp|woff|woff2)",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      }
    ]
  },
  "emulators": {
    "functions": { "port": 5001 },
    "firestore": { "host": "127.0.0.1", "port": 8081 },
    "hosting": { "port": 5000 },
    "ui": { "enabled": true, "host": "127.0.0.1", "port": 4001 },
    "hub": { "port": 4401 },
    "logging": { "port": 4501 }
  }
}
